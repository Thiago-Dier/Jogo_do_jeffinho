  funcao prossiga(){
		se ( resp == "CERTO" ){
			rodada()
		}
	}

	funcao batalha_final () {

		se (hp == 0){
			morre()
		}

		escreva_lento("Agora voce tera que batalhar!!\n", 50)
		escreva_lento("Se lembra dessa pessoa?\n\n", 50)
		limpa ()
		julio ()
		u.aguarde (2000)

		escreva_lento("Ele voltou, diretamente do primeiro bimestre, e agora vai te destruir!!!\n", 50)
		escreva_lento("Com base em seus acertos, voce tem ", 50)
		escreva (hp, "\n")
		escreva_lento("O Doutor Binario esta de volta e possui 100 de HP, preparado para lutar? [S] ou [N] ", 50)
		cadeia escolhe
		leia (escolhe)

		se ( escolhe == "S" ou escolhe == "s") {
			escreva_lento("OK! Vamos para a batalha entre voces dois!\n", 50)
		}

		senao {
			escreva_lento("Nao interessa! Vamos para a batalha logo!\n", 50)
		}
		limpa()
		escreva ("Sua vida: " + hp + "\n")
		escreva ("Vida do Boss: " + vida_julio + "\n")
		escreva_lento("Voce começa atacando! Qual ataque voce decide usar?\n", 50)
		escreva_lento("[1] Soco mais ou menos\n", 50)
		escreva_lento("[2] Lancamento de CD\n", 50)
		escreva_lento("[3] Corte da Espada de MAC/IOS \n", 50)
		inteiro atacar
		leia (atacar)

		se ( atacar == 1 ){
			escreva_lento("Nossa! Seu soco mais ou menos confundiu o Julio, devido ao valor ser intermediario, ao inves de binario\n", 50)
			escreva_lento("Esse ataque tirou 20 de HP do seu oponente", 50)
			vida_julio -= 20
		}

		senao se ( atacar == 2 ){
			escreva_lento("Uau! O Julio nao gosta de CDs, boa escolha!\n", 50)
			escreva_lento("Esse ataque tirou 30 de HP do seu oponente", 50)
			vida_julio -= 30
		}

		senao se ( atacar == 3 ){
			escreva_lento("Perfeito! O Julio nao gosta de MAC/IOS, seu corte nao so feriu ele, mas feriu seus sentimentos pelo Linux tambem\n", 50)
			escreva_lento("Esse ataque tirou 40 de HP do seu oponente", 50)
			vida_julio -= 40
		}

		//ataque do julio

		limpa ()
		escreva_lento("Agora voce desafia o Julio a jogar Pedra, Rosquinha e Quarta-Feira\n", 50)
		escreva_lento("Funciona com uma especie de pedra, papel e tesoura, mas com possibilidades diferentes\n", 50)
		escreva_lento("O que voce faz?\n", 50)
		escreva_lento("[1] Pedra\n", 50)
		escreva_lento("[2] Rosquinha\n", 50)
		escreva_lento("[3] Quarta-Feira \n", 50)
		inteiro opcao2 
		leia (opcao2)

		se ( opcao2 == 1 ){
			escreva_lento("O Julio escolheu Rosquinha\n", 50)
			escreva_lento("Voce escolheu Pedra, logo o Julio ganhou\n", 50)
			escreva_lento("Segundo as regras, a rosquinha deixa a pedra deliciosa\n", 50)
			escreva_lento("Voce perdeu 20 de HP", 50)
			hp -= 20
		}

		senao se ( opcao2 == 2 ){
			escreva_lento("O Julio escolheu Rosquinha\n", 50)
			escreva_lento("Voce escolheu rosquinha tambem, logo, nada aconteceu\n", 50)
			
		}

		senao se ( opcao2 == 3 ){
			escreva_lento("O Julio escolheu Rosquinha\n", 50)
			escreva_lento("Voce escolheu quarta-feira, logo, voce venceu\n", 50)
			escreva_lento("Segundo as regras, as lojas de rosquinhas estao fechadas nas quartas-feiras\n", 50)
			escreva_lento("Voce causou 20 de dano", 50)
			vida_julio -= 20
		}

		// ataque do julio

		limpa ()
		escreva_lento("Aguente firme, voce está indo bem\n", 50)
		escreva_lento("Voce olha para o lado e vê uma tabela com portas logicas\n", 50)
		escreva_lento("Julio treme, pois sabe que se voce acertar quais são as tres portas lógicas, causara um grande dano (50)\n", 50)
		escreva_lento("Primeira porta: qual eh essa porta?\n\n", 50)

	     escreva("                          ..@@@@@@@@@@@@%*-...                             \n")
    		escreva("       ......             ..@-          ..*@@=.                            \n")
   		escreva("       ..=%. ..............:@-            ...%@-.                          \n")
    		escreva("      ..:%#+..-============+@-              ..+@=.                         \n")
   		escreva("       .....              ..@-                .%@.               .....    \n")
    		escreva("                          ..@-                 -@+::::::::::::.. .+:+..   \n")
    		escreva("                          ..@-                .:@*------------:. .+-*..   \n")
   		escreva("        .:..              ..@-                .%@:               ......   \n")
    		escreva("       .:%*=..:-------------@-              ..+@+.                         \n")
   		escreva("       .:#+- ..::::::::::::-@-             ..#@=.                          \n")
   		escreva("       .....              ..@-        . ..=%@*.                            \n")
    		escreva("                          ..@@@@@@@@@@@@@%+-.                              \n")
    		escreva("                          ...............                                  \n")

    		escreva_lento("[1] OR\n", 50)
    		escreva_lento("[2] XOR\n", 50)
    		escreva_lento("[3] AND \n", 50)
    		inteiro opcao3
    		inteiro dano_das_portas = 50
    		leia (opcao3)

    		se (opcao3 == 3){
    			escreva_lento("Certo, vamos para a proxima\n", 50)
    		}

    		senao {
    			escreva_lento("Errado, agora seu ataque ira dar 10 de dano a menos", 50)
    			dano_das_portas -= 10
    		}

		limpa()
		escreva_lento("Agora qual eh essa porta?\n\n", 50)

		 escreva("                                                         \n")
   		 escreva("                     .=@@%%%%%%%%%@@@@@%+..              \n")
    		 escreva("                       =@%.           .-#@@#:.            \n")
    		 escreva("        ..::::::::::::::*@#.              :#@%=.          \n")
   		 escreva("        .-+++++++++++++++#@=                .*@%-.        \n")
    		 escreva("                         :@*.                .:#@*.       \n")
   		 escreva("                         .%#:                  .*@%.      \n")
    		 escreva("                         .#%-                    *@@@@@@@@@@@@@@@          \n")
   		 escreva("                         .%#:                  .*@%.                       \n")
   		 escreva("                        :@*.                .:#@*.                       \n")
   		 escreva("       .-===============#@=                .+@%-.                   \n")
   		 escreva("        .:--------------*@#.              :*@@=.                    \n")
    		 escreva("                       -@%.           .-#@@%:.                      \n")
    		 escreva("                     .=@@%%%%%%%%%@@@@@@*:.                         \n")
    		 escreva("                    .:------------::..                              \n")

    		escreva_lento("[1] OR\n", 50)
    		escreva_lento("[2] XOR\n", 50)
    		escreva_lento("[3] AND \n", 50)
    		inteiro opcao4
    		leia (opcao4)

    		se ( opcao4 == 1 ){
    			escreva_lento("Certo, vamos para a proxima\n", 50)
    		}

    		senao {
    			escreva_lento("Errado, agora seu ataque ira dar 10 de dano a menos", 50)
    			dano_das_portas -= 10
    			
    		}

    		limpa ()
    		escreva_lento("Agora a ultima, qual eh essa porta?\n\n", 50)

    		escreva("                              :**********************+::.\n")
   		escreva("                           -*  *=                         .#@#.\n")
   		escreva("                            +*. %:                            .##.\n")
    		escreva("                             %: .%                              .+*\n")
    		escreva("                             :# .#=                               .%-\n")
    		escreva("                             .@: -#.                               .**\n")
    		escreva("                              ++ .%.                                 *-\n")
    		escreva("                              .#  *-                                 .@-                          \n")
    		escreva("                               #  ==                                  :#                          \n")
    		escreva("                               #  ==                                   +%%%%%%%%%%%%@@+        \n")
    		escreva("                               #  ==                                  .%\n")
    		escreva("                               #  ==                                 .%-\n")
    		escreva("                              .#  %:                                 +=\n")
    		escreva("            :%................=* .%.                                =#.\n")
    		escreva("            ..               .%- +*                                :*\n")
    		escreva("                             :@ .%.                              .%=.\n")
    		escreva("                            .%. #-                             .%+.\n")
    		escreva("                           .**.*+                          .=%%:\n")
    		escreva("                           ++ +@@@@@@@@@@@@@@@@@@@@@@@@@#+:.\n")

    		escreva_lento("[1] OR\n", 50)
    		escreva_lento("[2] XOR\n", 50)
    		escreva_lento("[3] AND \n", 50)
    		inteiro opcao5
    		leia (opcao5)

    		se ( opcao5 == 2 ){
    			escreva_lento("Certo! Seu ataque ira dar ", 50)
    			escreva(dano_das_portas, " no Julio\n")
    			vida_julio -= dano_das_portas
    		}

    		senao {
    			escreva_lento("Errado, seu ataque ira dar 10 de dano a menos", 50)
    			dano_das_portas -= 10
    			vida_julio -= dano_das_portas
    		}
	}

	funcao julio () {


  		u.aguarde(2000)
  	}

  	funcao morre () {
  		se (hp == 0 ou vida == 0){
  			escreva_lento("Bem, parece que sua historia chegou ao fim\n", 50)
  			escreva_lento("Voce agora perdeu seu título de girino\n", 50)
  			escreva_lento("Não ira ter pra si o BWJOS e agora sera esquecido\n\n", 50)

			escreva(" _______  _______  __   __  _______    _______  __   __  _______  ______   \n")
    			escreva("|       ||   _   ||  |_|  ||       |  |       ||  | |  ||       ||    _ |  \n")
    			escreva("|    ___||  |_|  ||       ||    ___|  |   _   ||  |_|  ||    ___||   | ||  \n")
    			escreva("|   | __ |       ||       ||   |___   |  | |  ||       ||   |___ |   |_||_ \n")
   			escreva("|   ||  ||       ||       ||    ___|  |  |_|  ||       ||    ___||    __  |\n")
    			escreva("|   |_| ||   _   || ||_|| ||   |___   |       | |     | |   |___ |   |  | |\n")
    			escreva("|_______||__| |__||_|   |_||_______|  |_______|  |___|  |_______||___|  |_| \n")

  			duracao = falso
  		}
  	}

  	funcao julio_derrotado () {
  		se (vida_julio == 0){
  			escreva_lento("Parabens! Você derrotou o boss final!\n", 50)
  			escreva_lento("Voce realmente merece a segunda ediçao do BWJOS!\n", 50)
  			escreva_lento("Agora aproveite o conhecimento eterno com essa frase cativante!\n", 50)
  			
  			final ()

  			escreva_lento("Obrigado por jogar nosso jogo!\n", 50)
  			escreva_lento("Creditos: Codigo: Thiago e Eduardo\n", 50)
  			escreva_lento("          Ideias: Thiago e Eduardo\n", 50)
  			escreva_lento("          Inspiração: Aulas do Professor Jefferson e Julio\n", 50)
  			duracao = falso
  			
  		}
  	}

  	funcao final () {
  		escreva_lento("A frase contida na segunda edição do BWJOS é:\n", 50)
  		escreva_lento("O 1° TDS pede desculpas ao Professor Jefferson!", 50)
  		
  	}
	
