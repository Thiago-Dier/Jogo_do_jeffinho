  funcao lancamento() {
	dado = u.sorteia(1, 6)
  	escolha (dado) {
  		
  		caso 1:
  		joga_dado1()
  		u.aguarde(500)
  		limpa()
  		pare

  		caso 2:
  		joga_dado2()
  		u.aguarde(500)
  		limpa()
  		pare

  		caso 3:
  		joga_dado3()
  		u.aguarde(500)
  		limpa()
  		pare

  		caso 4:
  		joga_dado4()
  		u.aguarde(500)
  		limpa()
  		pare

  		caso 5:
  		joga_dado5()
  		u.aguarde(500)
  		limpa()
  		pare

  		caso 6:
  		joga_dado6()
  		u.aguarde(500)
  		limpa()
  		pare
  	}		
  }

  funcao rodada(){
  	limpa()
  	escreva_lento("Voce tem ", 50)
  	escreva(vida)
  	escreva_lento(" vidas restantes\n", 50)
  	escreva_lento("Voce esta na posicao ", 50)
  	escreva(casa ,"\n")
  	escreva_lento("Voce joga o dado\n", 50)
  	lancamento()
  	escreva_lento("Voce tirou ", 50)
  	escreva(dado)
  	escreva_lento(", pode andar esse numero de casas\n", 50)
  	casa += dado
  	limpa()
  	u.aguarde(500)
  	verifica_casa()

  	se ( casa >= 25){
  		duracao = falso
  		final()
  	}

  	se ( cas == 1 ) {
  		rodada()
  	}

  	senao {
  		pergunte ()
  		
  	}
  }

   funcao verifica_casa() {

  	se (casa % 2 == 0){
  		escreva_lento("Nao ocorreu nada, podemos prosseguir\n", 50)
  		 cas = 1
  	}

  	senao {
  		escreva_lento("Agora voce tera que responder uma pergunta\n", 50)
  		 cas = 2
  		
  	}
  	
  }

  funcao pergunte(){
  	
  	inteiro pergunta = u.sorteia(1, 18)
  	inteiro resposta

  
  	escolha (pergunta) {

  		caso 1:
  		escreva_lento("Qual opçao abaixo nunca devemos escrever uma variavel?\n", 50)
  		escreva_lento("[1] dias_contados\n", 50)
  		escreva_lento("[2] salamesadia\n", 50)
  		escreva_lento("[3] nomeUsuario\n", 50)
  		leia (resposta)

  		 se (resposta == 2){
  			escreva ("Resposta correta\n")
  			escreva_lento("Essa foi facil!\n", 50)
  			u.aguarde(700)
  			resp = "CERTO"
  			acertos ++
  			prossiga()
  			u.aguarde(2000)
  		}

  		senao{
  			escreva ("Resposta incorreta")
  			resp = "CERTO"
  			casa = casa - 3
  			vida --
  		}

  		caso 2:
  		escreva_lento("Na atividade 3 do 2° bimestre, na questao 12, que alimento custava 1000 reais?\n", 50)
  		escreva_lento("[1] Semente dos Deuses\n", 50)
  		escreva_lento("[2] Hamburguer de Siri\n", 50)
  		escreva_lento("[3] Sanduche Supremo\n", 50)
  		leia (resposta)

  		se (resposta == 1){
  			escreva ("Resposta correta\n")
  			escreva_lento("Eh um bom preço não acha?\n", 50)
  			u.aguarde(700)
  			resp = "CERTO"
  			acertos ++
  			prossiga()
  			u.aguarde(2000)
  		}

  		senao {
  			escreva ("Resposta incorreta")
  			resp = "CERTO"
  			casa = casa - 3
  			vida --
  		}


  		caso 3:
  		escreva_lento("Qual o nome da cachorrinha do professor Jefferson?\n", 50)
  		escreva_lento("[1] Bela\n", 50)
  		escreva_lento("[2] Gelatina\n", 50)
  		escreva_lento("[3] Chica\n", 50)
  		leia (resposta)

  		se (resposta == 3){
  			escreva ("Resposta correta\n")
  			escreva_lento("Que nome fofo XD!\n", 50)
  			u.aguarde(700)
  			resp = "CERTO"
  			acertos ++
  			prossiga()
  			u.aguarde(2000)
  		}

  		senao {
  			escreva ("Resposta incorreta\n")
  			resp = "CERTO"
  			casa = casa - 3
  			vida --
  		}

  		caso 4:
  		escreva_lento("Porque o programador nunca encontrou sua namorada?\n", 50)
  		escreva_lento("[1] Porque o carro dele quebrou\n", 50)
  		escreva_lento("[2] Porque ele foi na mesa 0 e ela na mesa 1\n", 50)
  		escreva_lento("[3] Porque ele teve dor de barriga e não foi\n", 50)
  		leia (resposta)

  		 se(resposta == 2){
  			escreva ("Resposta correta\n")
  			escreva_lento("Hahaha essa eh a melhor piada!\n", 50)
  			u.aguarde(700)
  			resp = "CERTO"
  			acertos ++
  			prossiga()
  			u.aguarde(2000)
  		}

  		senao {
  			escreva ("Resposta incorreta")
  			resp = "CERTO"
  			casa = casa - 3
  			vida --
  		}

  		caso 5:
  		escreva_lento("Para saber exatamente como um codigo esta sendo executado, usamos uma ferramenta denominada de:\n", 50)
  		escreva_lento("[1] Sapatoviski\n", 50)
  		escreva_lento("[2] Funcao Percorrer Código\n", 50)
  		escreva_lento("[3] Olhometro\n", 50)
  		leia (resposta)

  		 se(resposta == 1){
  			escreva ("Resposta correta\n")
  			escreva_lento("Ninguem supera ele!\n", 50)
  			u.aguarde(700)
